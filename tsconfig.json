{
  "compilerOptions": {
    // Default
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],

    // Added
    "jsx": "react-jsx",
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,

    // Declare type extensions
    "typeRoots" : ["node_modules/@types", "./fonts.d.ts"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/stories",
    "src/reportWebVitals.ts",
    "src/index.tsx",
    "*/**/*.stories.tsx",
    "node_modules",
  ]
}